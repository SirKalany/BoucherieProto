generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
}

model OpeningHour {
  id        Int     @id @default(autoincrement())
  day       String  // e.g., "Monday"
  openTime  String
  closeTime String
}

model Order {
  id        Int      @id @default(autoincrement())
  products  String   // JSON string of product IDs + quantities (simple for prototype)
  collected Boolean  @default(false)
  createdAt DateTime @default(now())
}
